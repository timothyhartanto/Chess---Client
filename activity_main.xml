<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.proto.chess.MainActivity"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivChessBoard"
        android:src="@drawable/chessboard"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"/>


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivBlackBishop"
        android:src="@drawable/blackbishop"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivBlackKing"
        android:src="@drawable/blackking"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivBlackKnight"
        android:src="@drawable/blackknight"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivBlackQueen"
        android:src="@drawable/blackqueen"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivBlackRook"
        android:src="@drawable/blackrook"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivwhiteBishop"
        android:src="@drawable/whitebishop"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivwhiteKing"
        android:src="@drawable/whiteking"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivwhiteKnight"
        android:src="@drawable/whiteknight"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivwhiteQueen"
        android:src="@drawable/whitequeen"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ivwhiteRook"
        android:src="@drawable/whiterook"
        android:visibility="invisible"/>

    </FrameLayout>

</RelativeLayout>
